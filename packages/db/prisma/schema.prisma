datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Device {
  id     String  @id @default(cuid())
  token  String  @unique // FCM token | APNS token | Web Push token | email
  active Boolean @default(false)
}

model NotificationRule {
  id             String     @id @default(cuid())
  delayMinBefore Int
  schedules      Schedule[]
}

model Schedule {
  id                String             @id @default(cuid())
  notificationRules NotificationRule[]
  day               Int
  hour              Int

  @@unique([day, hour])
}

model Alert {
  id      String   @id @default(cuid())
  title   String
  startAt DateTime
  endAt   DateTime
}
