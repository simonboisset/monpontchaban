datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Device {
  id       String             @id @default(cuid())
  token    String             @unique // Expo token 
  rules    NotificationRule[]
  sessions Session[]
  reports  Report[]
}

model NotificationRule {
  id             String  @id @default(cuid())
  active         Boolean @default(true)
  title          String
  delayMinBefore Int
  scheduleIds    Int[]
  device         Device  @relation(fields: [deviceId], references: [id])
  deviceId       String
}

model Alert {
  id      String   @id @default(cuid())
  title   String
  startAt DateTime
  endAt   DateTime
}

model Report {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  status    String
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String
}

model Session {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  expiredAt DateTime
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String
}
