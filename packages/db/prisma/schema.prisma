datasource db {
  provider = "sqlite"
  url      = "file:./chaban.db"
}

generator client {
  provider = "prisma-client-js"
}

model Device {
  id       String             @id @default(cuid())
  token    String             @unique // Expo token 
  rules    NotificationRule[]
  sessions Session[]
}

model NotificationRule {
  id             String     @id @default(cuid())
  title          String
  delayMinBefore Int
  schedules      Schedule[]
  device         Device     @relation(fields: [deviceId], references: [id])
  deviceId       String
}

model Schedule {
  id            Int                @id
  hour          Int
  day           Int
  notifications NotificationRule[]
}

model Alert {
  id      String   @id @default(cuid())
  title   String
  startAt DateTime
  endAt   DateTime
}

model Session {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  expiredAt DateTime
  device    Device   @relation(fields: [deviceId], references: [id])
  deviceId  String
}
