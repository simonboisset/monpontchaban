datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum DeviceOs {
  IOS
  ANDROID
}

model Device {
  id     String   @id @default(cuid())
  token  String   @unique
  active Boolean  @default(false)
  os     DeviceOs @default(ANDROID)
  user   User?    @relation(fields: [userId], references: [id])
  userId String?  @unique
}

enum UserCodeType {
  LOGIN
  REGISTER
  DELETE
}

model UserCode {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  hash      String
  type      UserCodeType
  user      User         @relation(fields: [userId], references: [id])
  userId    String       @unique
  attempts  Int          @default(0)
}

model User {
  id                String             @id @default(cuid())
  emailHash         String             @unique
  devices           Device[]
  notificationRules NotificationRule[]
  supportIssues     SupportIssue[]
  isAdmin           Boolean            @default(false)
  code              UserCode?
}

model NotificationRule {
  id             String     @id @default(cuid())
  user           User       @relation(fields: [userId], references: [id])
  userId         String     @unique
  channel        Channel    @relation(fields: [channelId], references: [id])
  channelId      String
  delayMinBefore Int
  schedules      Schedule[]
}

model Schedule {
  id                String             @id @default(cuid())
  notificationRules NotificationRule[]
  day               Int
  hour              Int

  @@unique([day, hour])
}

model Alert {
  id        String   @id @default(cuid())
  title     String
  channel   Channel  @relation(fields: [channelId], references: [id])
  channelId String
  startAt   DateTime
  endAt     DateTime
}

enum SupportIssueCategory {
  BUG
  FEATURE
  OTHER
}

enum SupportIssueStatus {
  OPEN
  CLOSED
}

model SupportIssue {
  id       String               @id @default(cuid())
  title    String?
  category SupportIssueCategory
  status   SupportIssueStatus   @default(OPEN)
  user     User                 @relation(fields: [userId], references: [id])
  userId   String               @unique
  messages SupportMessage[]
}

model SupportMessage {
  id          String       @id @default(cuid())
  sentAt      DateTime     @default(now())
  text        String
  issue       SupportIssue @relation(fields: [issueId], references: [id])
  issueId     String
  isFromAdmin Boolean      @default(false)
}

model Channel {
  id            String             @id @default(cuid())
  name          String
  alerts        Alert[]
  subscriptions NotificationRule[]
}

model ClientSession {
  id String @id @default(cuid())

  appName    String
  appVersion String @default("0.0.0")

  origin   String
  width    Int    @default(0)
  height   Int    @default(0)
  size     String @default("none")
  language String @default("none")
  os       String @default("OTHER")
  browser  String @default("OTHER")

  createdAt DateTime @default(now())

  analytics    Analytics[]
  logs         Log[]
  performances Performance[]
}

model Analytics {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  appName    String
  appVersion String @default("0.0.0")

  origin   String
  width    Int    @default(0)
  height   Int    @default(0)
  size     String @default("none")
  language String @default("none")
  os       String @default("OTHER")
  browser  String @default("OTHER")

  path     String?
  referrer String?

  clientSession   ClientSession @relation(fields: [clientSessionId], references: [id])
  clientSessionId String
}

model Log {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  level     String
  message   String

  appName    String
  appVersion String @default("0.0.0")

  serverSession   ServerSession? @relation(fields: [serverSessionId], references: [id])
  serverSessionId String?

  clientSession   ClientSession? @relation(fields: [clientSessionId], references: [id])
  clientSessionId String?
}

model Monitor {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  cpu        Float
  memory     Float
  disk       Float
  uptime     Float
  appName    String
  appVersion String   @default("0.0.0")

  serverSession   ServerSession @relation(fields: [serverSessionId], references: [id])
  serverSessionId String
}

model Performance {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  duration   Float
  name       String
  appName    String
  appVersion String   @default("0.0.0")

  serverSession   ServerSession? @relation(fields: [serverSessionId], references: [id])
  serverSessionId String?
  clientSession   ClientSession? @relation(fields: [clientSessionId], references: [id])
  clientSessionId String?
}

model ServerSession {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  appName    String
  appVersion String   @default("0.0.0")

  logs         Log[]
  monitors     Monitor[]
  performances Performance[]
}
